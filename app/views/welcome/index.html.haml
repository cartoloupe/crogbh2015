.whole
  .top
    .titleholder
      = image_tag('OneSource.png', class: "logo")
      %h1 OneSource
  %a.btn.btn-default{href: category_path('pregnancy')} Pregnancy
  %a.btn.btn-default{href: category_path('employment')} Employment
  /= button_to 'pregnancy support', {controller: 'category', params: { category: 'pregnancy' }, method: :get}, {method: :get, class: 'btn-default btn-lg'}
  /= button_to 'employment', {controller: 'employment', method: :get}, {method: :get, class: 'btn-default btn-lg'}
  %br
  - @all_the_sections.map do |button_text|
    %a.btn.btn-default{href: category_path('veterans')} Veterans
    /= button_to button_text, {controller: 'veterans', method: :get}, {method: :get, class: 'btn-default btn-lg'}
  %br

  = button_to 'demo', {controller: 'pitch', method: :get}, {method: :get, class: 'btn-default btn-lg btn demo'}
