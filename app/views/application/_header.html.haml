%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#header-collapse', 'aria-expanded' => 'false'}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: '/'} OneSource
    #header-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{href: '#', 'data-toggle' => 'dropdown', role: 'button', 'aria-haspopup' => 'true', 'aria-expanded' => 'false'}
            - if user_signed_in?
              = current_user.email
            - else
              Guest
            %span.caret
            %ul.dropdown-menu
              - if user_signed_in?
                %li
                  %a{href: '/'} Profile
                %li.divider{role: 'separator'}
                %li
                  %a{href: '/'} Sign Out
              - else
                %li
                  %a{href: '/'} Sign Up
